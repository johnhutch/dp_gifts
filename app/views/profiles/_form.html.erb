      <%= f.label :twitter, "Twitter Account" %>
      <%= f.text_field :twitter %>
    </div>
    <div class="field">
      <%= f.label :website, "Your Website" %>
      <%= f.text_field :website %>
    </div>
  </div>
  <div class="column">
    <div class="field">
      <%= f.label :bio, "Short Bio" %>
      <%= f.text_area :bio %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t('buttons.update_profile') %>
  </div>
