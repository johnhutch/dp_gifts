<article id="post">
  <h3><%= @post.title %></h3>
  <div id="byline">Posted by <%= @post.user.email %> <span id="published"><%= published?(@post) %></span></div>
  <% if @post.exchange %>
    <div id="exchange"><%= @post.exchange.name %></div>
  <% end %>

  <div class="row">
    <% for photo in @post.photos %>
      <div class="photo span3">
        <h4><%= photo.title %></h4>

        <a href="<%= photo.image.url(:medium) %>"><%= image_tag photo.image.url(:thumb) %></a>

        <%= markdown photo.caption %>
      </div>
    <% end %>
  </div>
  <%= markdown @post.body %>
</article>

<section id="comments">
  <h3>Comments</h3>
	<% if @post.comments.blank? %>
		<p>This post has no comments</p>
	<% end %>
  <%= render :partial => 'layouts/comment', :collection => @post.comments %>
  <%= render :partial => 'layouts/new_comment', :locals => {:type => "post"} %> 
</section>

