<fieldset class="photo">
  <h4>Photo:</h4>
  <div class="field">
    <%= p.label :image, "File Upload" %>
    <%= p.file_field :image %>
  </div>
  <div class="field">
    <%= p.label :caption, "Photo Caption" %>
    <%= p.text_field :caption %>
  </div>
  <div class="field destroy">
    <%= p.link_to_remove "Remove this photo", :class => "btn btn-danger"  %>
  </div>

</fieldset>

