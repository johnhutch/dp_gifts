<div class="row">
  <section id="sign_in" class="span4">
      <h2>Sign in</h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="field"><%= f.label :email %> 
      <%= f.email_field :email, :id => 'sign_in_email' %></div>

        <div class="field"><%= f.label :password %> 
      <%= f.password_field :password, :id => 'sign_in_password' %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div class="actions"><%= f.submit "Sign in" %></div>
      <% end %>

      <%= render "links" %>
  </section>

  <section id="sign_up" class="span4">
      <h2>Sign up</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, :id => 'registration_name' %>
      </div>

      <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, :id => 'registration_email' %>
      </div>

      <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, :id => 'registration_password' %>
      </div>

      <div class="field">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, :id => 'registration_confirm_password' %>
      </div>

      <div class="actions">
          <%= f.submit "Sign up" %>
      </div>
      <% end %>

    </section>
</div>
